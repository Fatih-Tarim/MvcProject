@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Başlık Ekleme Sayfası</h1>
<hr />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
<div class="form-group container">
    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)<br />

    @Html.Label("Kategori")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.vlc, new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.CategoryId)<br />

    @Html.Label("Yazar")
    @Html.DropDownListFor(x=>x.WriterId,(List<SelectListItem>)ViewBag.clw, new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.WriterId)<br />
    <button class="btn btn-info"> Başlık Oluştur </button>
</div>
}




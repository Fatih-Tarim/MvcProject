@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2 class="text-center">Hakkımda Veri Listesi</h2>
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Hakkımda Başlığı</th>
            <th>Aktif Yap</th>
            <th>Pasif Yap</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutId</td>
                <td>Başlık</td>
                <td><a class="btn btn-success">Aktif Yap</a></td>
                <td><a class="btn btn-danger">Pasif Yap</a></td>
            </tr>
        }
    </table>

    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
        Yeni Hakkımızda yazı girişi
    </button>

    @* Popup Begin *@
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Hakkımızda Metin Girişi</h2>
                </div>
                <form action="/About/AddAbout" method="post" class="">
                    <div class="modal-body">
                        <label>Hakkımda Metin 1</label>
                        <input type="text" name="AboutDetails1" value="" class="form-control" />
                        <br />
                        <label>Hakkımda Metin 2</label>
                        <input type="text" name="AboutDetails2" value="" class="form-control" />
                        <br />
                        <label>Hakkımda Görsel 1</label>
                        <input type="text" name="AboutImage1" value="" class="form-control" />
                        <br />
                        <label>Hakkımda Görsel 2</label>
                        <input type="text" name="AboutImage2" value="" class="form-control" />
                        <br />
                        <button class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @* Popup End *@
</div>

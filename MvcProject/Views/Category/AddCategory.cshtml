@model EntityLayer.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <h2 class="text-center">Yeni Kategori Ekleme Sayfası</h2>
    <hr />

    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
    {
<div class="form-group">
    @Html.Label("Kategori Adı:")
    @Html.TextBoxFor(x => x.CategoryName)
    @Html.ValidationMessageFor(x => x.CategoryName)<br /><br />

    @Html.Label("Açıklama: ")
    @Html.TextBoxFor(x => x.CategoryDescription) 
    @Html.ValidationMessageFor(x=>x.CategoryDescription)<br /> <br />

    <button class="btn btn-success">Kaydet</button>
</div>
    }

